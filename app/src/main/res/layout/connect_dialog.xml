<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="200dp"
    android:id="@+id/connect_dialog">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/mons_splash"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff000000"
        android:text="WANNA FIGHT?"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/dialog_button_accept"
        android:layout_marginTop="67dp" />

    <Button
        android:id="@+id/dialog_button_accept"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text=" Ok "
        android:layout_marginRight="5dp"
        android:background="@drawable/shape_icon_skull"
        android:layout_marginBottom="18dp"
        android:layout_alignBottom="@+id/image"
        android:layout_toEndOf="@+id/dialog_button_deny"
        android:layout_marginStart="43dp" />

    <Button
        android:id="@+id/dialog_button_deny"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text=" Nope "
        android:layout_marginRight="5dp"
        android:background="@drawable/shape_icon_skull"
        android:layout_alignTop="@+id/dialog_button_accept"
        android:layout_centerHorizontal="true" />

</RelativeLayout>