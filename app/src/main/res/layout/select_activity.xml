<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.vfs.augmented.activities.SelectActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Monster1"
        android:id="@+id/btn_monster1"
        android:onClick="onMonster1"
        android:src="@drawable/icon_mon01_64"
        android:background="@drawable/shape_circle"
        android:backgroundTint="@android:color/black"
        android:padding="20dp"
        android:layout_above="@+id/btn_monster2"
        android:layout_alignStart="@+id/btn_monster2"
        android:layout_alignParentEnd="false"
        android:layout_marginBottom="20dp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Monster2"
        android:id="@+id/btn_monster2"
        android:onClick="onMonster2"
        android:src="@drawable/icon_mon02_64"
        android:background="@drawable/shape_circle"
        android:backgroundTint="@android:color/black"
        android:padding="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PICK YOUR MONSTER"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:textStyle="bold" />
</RelativeLayout>
