<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient_radial_dark"
    tools:context="com.vfs.augmented.activities.ConnectActivity">

    <TextView
        android:text="FIND PLAYERS"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/connect_button_multiplayer"
        android:background="@drawable/shape_icon_skull"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:onClick="onFindPlayers"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/connect_button_singleplayer"
        android:layout_marginTop="49dp" />

    <TextView
        android:text="SINGLE PLAYER"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/connect_button_singleplayer"
        android:background="@drawable/shape_icon_skull"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:onClick="onSinglePlayer"
        android:layout_below="@+id/connect_button_multiplayer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CHOOSE MODE"
        android:id="@+id/textView2"
        android:textColor="#fffefaff"
        android:maxLines="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp" />

</RelativeLayout>
