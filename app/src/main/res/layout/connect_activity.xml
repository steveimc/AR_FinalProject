<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.vfs.augmented.activities.ConnectActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Discovery"
        android:id="@+id/button_discovery"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:onClick="onEnableDiscoveryButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secure Connect"
        android:id="@+id/button_connect_secure"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onSecureConnectButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insecure Connect"
        android:id="@+id/button_connect_insecure"
        android:layout_below="@+id/button_connect_secure"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:onClick="onInsecureConnectButton"/>
</RelativeLayout>
